{
    "expo": {
        "name": "pizza-shack",
        "slug": "pizza-shack",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/logo_text.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/logo.png",
                "backgroundColor": "#ffffff"
            }
        },
        "web": {
            "favicon": "./assets/logo.png",
            "bundler": "metro"
        },
        "updates": {
            "enabled": true,
            "checkAutomatically": "ON_LOAD"
        },
        "plugins": [
            "expo-router"
        ]
    }
}